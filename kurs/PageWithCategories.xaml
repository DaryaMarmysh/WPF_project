<Page x:Class="kurs.PageWithCategories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kurs"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageWithCategories">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <ItemsControl Foreground="#FF313131" FontFamily="Champagne &amp; Limousines"  ItemsSource="{Binding Buttons}"
                          Name="Catigories" Margin="0,50,0,0">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button  Click="SelectCategory"></Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
    
</Page>
